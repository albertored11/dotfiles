#!/usr/bin/env bash

usage() {
    echo "usage: $(basename "$0") <up/down/toggle> [diff%]" >&2
    exit 1
}

[[ "$#" -ge 1 ]] || usage

diff=$2

[[ -z $diff ]] && diff=5

case "$1" in
    up)
        amixer -q sset Master unmute && amixer -q sset Master $diff%+
    ;;
    down)
        amixer -q sset Master unmute && amixer -q sset Master $diff%-
    ;;
    toggle)
        amixer -q sset Master toggle
    ;;
esac

state="$(awk -F"[][]" '/Left:/ { print $4 }' <(amixer sget Master))"

case "$state" in
    off)
        desc="Silenciado"
    ;;
    on)
        desc="$(awk -F"[][]" '/Left:/ { print $2 }' <(amixer sget Master))"
    ;;
esac

dunstify -a "Volumen" "$desc"
