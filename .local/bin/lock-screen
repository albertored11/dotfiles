#!/usr/bin/env sh

lock() {

    background=2E3440
    current_line=4C566A
    foreground=D8DEE9
    comment=4C566A
    pink=B48EAD
    purple=88C0D0
    red=BF616A

    [[ -z "$(pgrep -f i3lock)" ]] || return 1

    dunstctl set-paused true

    i3lock -e -t -i /home/herbort/github/nordic-wallpapers/wallpapers/ign_unsplash19.png -k --insidever-color=$background --insidewrong-color=$background --inside-color=$background --ringver-color=$pink --ringwrong-color=$red --ring-color=$current_line --line-uses-inside --keyhl-color=$purple --bshl-color=$comment --separator-color=$current_line --time-color=$foreground --time-str="%-H:%M" --time-pos="ix:iy-250" --date-color=$foreground --date-str="%a, %d de %b de %Y" --time-font="Inter Medium" --date-font="Inter Medium" --time-size=80 --date-size=20 --date-pos="tx:ty+40" --verif-text="" --wrong-text="" --noinput-text="" --no-modkey-text

    dunstctl set-paused false

}

lock & sleep 0.5; xset dpms force off
