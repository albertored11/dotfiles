#!/usr/bin/env sh

lock() {

    background=282a36
    current_line=44475a
    foreground=f8f8f2
    comment=6272a4
    pink=ff79c6
    purple=bd93f9
    red=ff5555

    dunstctl set-paused true

    i3lock -e -t -i /home/herbort/Nextcloud/Fondos\ de\ pantalla/Bakemonogatari/bakelock.jpg -k --insidever-color=$background --insidewrong-color=$background --inside-color=$background --ringver-color=$pink --ringwrong-color=$red --ring-color=$current_line --line-uses-inside --keyhl-color=$purple --bshl-color=$comment --separator-color=$current_line --time-color=$foreground --time-str="%-H:%M" --time-pos="ix:iy+340" --date-color=$foreground --date-str="%a, %d de %b de %Y" --time-font="Inter Medium" --date-font="Inter Medium" --time-size=80 --date-size=20 --date-pos="tx:ty+40" --verif-text="" --wrong-text="" --noinput-text="" --no-modkey-text

    dunstctl set-paused false

}

lock & sleep 0.4; xset dpms force off
