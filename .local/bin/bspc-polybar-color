#!/usr/bin/env bash

# TODO: check if monocle/tiled layout

bspc subscribe node_add node_remove node_transfer node_flag node_state desktop_focus | while read; do
    if [[ $(bspc query -N -n .!hidden.tiled.local.window | wc -l) == "1" ]]; then
        feh --no-fehbg --bg-tile --image-bg '#282a36' '/home/herbort/Nextcloud/Fondos de pantalla/378fa9_6635316_0_inv_solid_polybar_42.png'
    else
        feh --no-fehbg --bg-tile --image-bg '#282a36' '/home/herbort/Nextcloud/Fondos de pantalla/378fa9_6635316_0_inv_blur_polybar_10_42.png'
    fi
done
