# modifiers
set $mod Mod4
set $alt Mod1

# font
font pango:Inter Medium 10

# KEYBINDINGS

# terminal emulator
bindsym $mod+t exec --no-startup-id kitty

# web browser
bindsym $mod+c exec --no-startup-id chromium

# file manager
bindsym $mod+e exec --no-startup-id pcmanfm-qt

# program launcher
bindsym $mod+Escape exec --no-startup-id $HOME/.config/rofi/launchers/misc/launcher.sh

# gcalcli month agenda calendar
bindsym $mod+shift+a exec --no-startup-id kitty --hold gcalcli calm --monday; exec --no-startup-id "sh -c 'sleep 0.2; i3-msg floating enable'"

# lyrics-in-terminal
bindsym $mod+shift+l exec --no-startup-id kitty lyrics

# adjust volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master unmute && amixer -q sset Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master unmute && amixer -q sset Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer -q sset Master toggle

# play/pause
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause

# prev/next song
bindsym $mod+Home exec --no-startup-id playerctl previous
bindsym $mod+End exec --no-startup-id playerctl next

# lock screen
bindsym $mod+l exec --no-startup-id $HOME/.local/bin/lock-screen

# take screenshot (full screen/crop/active window/first monitor/second monitor)
bindsym Print exec --no-startup-id $HOME/.local/bin/take-screenshot fullscr "$HOME/Nextcloud/Capturas de pantalla/alberpc"
bindsym Shift+Print exec --no-startup-id $HOME/.local/bin/take-screenshot crop "$HOME/Nextcloud/Capturas de pantalla/alberpc"
bindsym $mod+Print exec --no-startup-id $HOME/.local/bin/take-screenshot activewin "$HOME/Nextcloud/Capturas de pantalla/alberpc"
bindsym Control+Print exec --no-startup-id $HOME/.local/bin/take-screenshot mon1 "$HOME/Nextcloud/Capturas de pantalla/alberpc"
bindsym Control+Shift+Print exec --no-startup-id $HOME/.local/bin/take-screenshot mon2 "$HOME/Nextcloud/Capturas de pantalla/alberpc"

# powermenu
bindsym Control+$alt+Delete exec --no-startup-id $HOME/.config/rofi/powermenu/powermenu.sh
bindsym XF86PowerOff exec --no-startup-id $HOME/.config/rofi/powermenu/powermenu.sh
bindsym XF86Sleep exec --no-startup-id $HOME/.config/rofi/powermenu/powermenu.sh

# WM CONFIG

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+i floating toggle

# focus the parent container
bindsym $mod+a focus parent

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# switch to prev/next workspace
bindsym Control+$mod+Left workspace prev
bindsym Control+$mod+Right workspace next

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# move to prev/next workspace
bindsym Control+$alt+Left move container to workspace prev
bindsym Control+$alt+Right move container to workspace next

# move to next monitor
bindsym $mod+less move container to output right

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize windows
bindsym $mod+$alt+Left exec --no-startup-id i3resize left
bindsym $mod+$alt+Down exec --no-startup-id i3resize down
bindsym $mod+$alt+Up exec --no-startup-id i3resize up
bindsym $mod+$alt+Right exec --no-startup-id i3resize right

# balance workspace
bindsym $mod+b exec --no-startup-id i3_balance_workspace &
bindsym $mod+shift+b exec --no-startup-id i3_balance_workspace --scope focus &

# workspaces output
workspace $ws1 output DP-1
workspace $ws2 output DP-1
workspace $ws3 output DP-1
workspace $ws4 output DP-1
workspace $ws5 output DP-1
workspace $ws6 output HDMI-2
workspace $ws7 output HDMI-2
workspace $ws8 output HDMI-2
workspace $ws9 output HDMI-2
workspace $ws10 output HDMI-2

# borders

default_border pixel 2
default_floating_border pixel 2

# window rules

for_window [class="lxqt-archiver"] floating enable
for_window [class="Blueman-manager"] floating enable
for_window [class="VirtualBox Manager"] layout tabbed

# GAPS

gaps inner 10

# COLOR SCHEME

# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36

client.background       #F8F8F2

# AUTOSTART

exec --no-startup-id xcape -e "Super_L=Super_L|Escape" &
exec --no-startup-id $HOME/.fehbg &
exec --no-startup-id blueman-applet &
exec --no-startup-id $HOME/.config/polybar/launch-i3.sh &
exec --no-startup-id picom --experimental-backends &
exec --no-startup-id unclutter &
exec --no-startup-id dunst &
exec --no-startup-id nextcloud &
exec --no-startup-id $HOME/.config/redshift/launch.sh &
exec_always --no-startup-id $HOME/github/i3-alternating-layout/alternating_layouts.py &
