#
# wm independent hotkeys
#

# terminal emulator
super + t
	kitty

# web browser
super + c
    chromium

# file manager
super + e
    pcmanfm-qt

# spotify
super + shift + s
    spotify

# discord
super + shift + d
    discord

# code
super + shift + c
    code

# idea
super + shift + i
    intellij-idea-ultimate-edition

# clion
super + shift + o
    clion

# program launcher
super + Escape
    $HOME/.config/rofi/launchers/misc/launcher.sh

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

# volume up/down (5%)
XF86Audio{RaiseVolume,LowerVolume}
    volume-notif {up,down}
    #amixer -q sset Master unmute && amixer -q sset Master 5%{+,-}
    #pactl set-sink-mute @DEFAULT_SINK@ false; pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

# volume up/down (1%)
shift + XF86Audio{RaiseVolume,LowerVolume}
    volume-notif {up,down} 1

# mute/unmute volume
XF86AudioMute
    volume-notif toggle
    #amixer -q sset Master toggle
    #pactl set-sink-mute @DEFAULT_SINK@ toggle

# play/pause
XF86AudioPlay
    playerctl play-pause

# prev/next song
super + {Home,End}
    playerctl {previous,next}

# lock screen
super + l
    lock-screen

# take screenshot (full screen/crop/active window/current monitor)
{_,shift + ,super + ,ctrl +}Print
    take-screenshot {fullscr,crop,activewin,mon} "$HOME/Nextcloud/Capturas de pantalla/alberpc"

# powermenu
{ctrl + alt + Delete,XF86PowerOff,XF86Sleep}
    $HOME/.config/rofi/powermenu/powermenu.sh

# show bluetooth devices
super + w
    $HOME/.config/rofi/bluetooth/launcher.sh

# google calendar
super + shift + a 
    xdg-open "https://calendar.google.com"

# lyrics-in-terminal
super + shift + l
    kitty lyrics

# ghci
XF86Calculator
    kitty ghci

# restart polybar
super + shift + p
    $HOME/.config/polybar/launch-bspwm.sh

#
# bspwm hotkeys
#

# restart bspwm
super + alt + r
	bspc wm -r

# close
super + q
	bspc node -c

# close brother
super + shift + q
    bspc node @brother -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window in the current desktop
super + g
	bspc node -s biggest.window.local.!hidden.window

#
# state/flags
#

# set the window state TODO hide tabs when fullscr in tabbed containers
super + {i,o,f}
    bspc node -t {tiled,floating,fullscreen}

# hide focused/brother window
super + {_,alt + }h
    bspc-hiding hide{_, brother}

# unhide any window
super + j
    bspc-hiding unhide any

# swap focused node with hidden node
super + alt + {1-9}
    bspc-hiding swap {1-9}

# show hidden windows and unhide/swap
super + {shift + ,alt + }j
    $HOME/.config/rofi/bspwm-hidden/launcher.sh {unhide,swap}

# toggle auto hide/unhide window
super + k
    bspc-auto-hide-unhide node $(bspc query -N -n)

#
# focus/swap
#

# focus/swap/send to the node in the given direction
super + {_,shift + ,shift + alt + }{Left,Down,Up,Right}
	bspc node -{f,s,n} {west,south,north,east}

# focus the node for the given path jump
super + {a,x,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop
ctrl + super + {Prior,Next}
	bspc desktop -f {prev,next}.local

# focus the next desktop in both monitors
ctrl + super + alt + Next
    bspc desktop -f next.local && bspc monitor -f next \
    && bspc desktop -f next.local && bspc monitor -f next

# focus the previous desktop in both monitors
ctrl + super + alt + Prior
    bspc desktop -f prev.local && bspc monitor -f next \
    && bspc desktop -f prev.local && bspc monitor -f next

# send to and focus the next/previous desktop
ctrl + alt + {Prior,Next}
    bspc node -d {prev,next}.local --follow

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

# send to the next monitor
super + less
    bspc node -f -m next --follow

#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# resize a window

super + alt + Left
    bspc node -z left -20 0 || bspc node -z right -20 0

super + alt + Down
    bspc node -z bottom 0 20 || bspc node -z top 0 20

super + alt + Up
    bspc node -z top 0 -20 || bspc node -z bottom 0 -20

super + alt + Right
    bspc node -z right 20 0 || bspc node -z left 20 0

# contract a window by moving one of its side inward
super + mode_switch + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + alt + {a,s,w,d}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# tabbed
#

# add to tabbed container
ctrl + alt + {Left,Down,Up,Right}
    tabc attach $(bspc query -N -n) {$(bspc query -N -n west),$(bspc query -N -n south),$(bspc query -N -n north),$(bspc query -N -n east)}

# create/remove from tabbed container
super + z
    id=$(bspc query -N -n); \
    [[ "$(xprop -id $id 8s '\t$0' WM_CLASS | cut -f2 | tr -d '"')" == "tabbed" ]] \
    && tabc detach $id \
    || tabc create $id

# toggle autoattach in tabbed container
super + shift + z
    tabc autoattach $(bspc query -N -n)
    
#
# others
#

# Make split ratios equal
super + b
    bspc node @/ --equalize

# Make split ratios balanced
super + shift + b
	bspc node @/ --balance

# Flip layout vertically/horizontally
super + {_,shift + }y
    bspc node @/ --flip {vertical,horizontal}

# Rotate desktop
super + {_,shift + }r
    bspc node @/ --rotate {90,-90}
