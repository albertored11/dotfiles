#
# wm independent hotkeys
#

# terminal emulator
super + t
	kitty

# web browser
super + c
    chromium

# file manager
super + e
    pcmanfm-qt

# spotify
super + shift + s
    spotify

# discord
super + shift + d
    discord

# code
super + shift + c
    code

# idea
super + shift + i
    intellij-idea-ultimate-edition

# clion
super + shift + o
    clion

# program launcher
super + Escape
    $HOME/.config/rofi/launchers/misc/launcher.sh

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

# volume up/down
XF86Audio{RaiseVolume,LowerVolume}
    amixer -q sset Master unmute && amixer -q sset Master 5%{+,-}
    #pactl set-sink-mute @DEFAULT_SINK@ false; pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

# mute/unmute volume
XF86AudioMute
    amixer -q sset Master toggle
    #pactl set-sink-mute @DEFAULT_SINK@ toggle

# play/pause
XF86AudioPlay
    playerctl play-pause

# prev/next song
super + {Home,End}
    playerctl {previous,next}

# lock screen
super + l
    $HOME/.local/bin/lock-screen

# take screenshot (full screen/crop/active window/first monitor/second monitor)
{_,shift + ,super + ,ctrl + ,ctrl + shift + }Print
    $HOME/.local/bin/take-screenshot {fullscr,crop,activewin,mon1,mon2} "$HOME/Nextcloud/Capturas de pantalla/alberpc"

# powermenu
{ctrl + alt + Delete,XF86PowerOff,XF86Sleep}
    $HOME/.config/rofi/powermenu/powermenu.sh

# gcalcli month agenda calendar
super + shift + a 
    kitty --hold gcalcli calm --monday

# lyrics-in-terminal
super + shift + l
    kitty lyrics

#
# bspwm hotkeys
#

# restart bspwm
super + alt + r
	bspc wm -r

# close
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window in the current desktop
super + g
	bspc node -s biggest.window.local.!hidden.window

#
# state/flags
#

# set the window state
super + {i,o,f}
    bspc node -t {tiled,floating,fullscreen}

# hide focused/brother window
super + {_,alt + } h
    bspc node {_,$(bspc query -N -n @brother.!hidden)} -g hidden=on

# unhide and focus window/group
super + shift + {_,alt + } + h
    hidden=$(bspc query -N -n @brother.hidden{.window,_}); \
    [[ -z $hidden ]] && hidden=$(bspc query -N -n any.hidden.local{.window,_}); \
    bspc node $hidden -g hidden=off && bspc node -f $hidden

#
# focus/swap
#

# focus/swap/send to the node in the given direction
super + {_,shift + ,shift + alt + }{Left,Down,Up,Right}
	bspc node -{f,s,n} {west,south,north,east}

# focus the node for the given path jump
super + {a,x,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop
ctrl + super + {Prior,Next}
	bspc desktop -f {prev,next}.local

# focus the next desktop in both monitors
ctrl + super + alt + Next
    bspc desktop -f next.local && bspc monitor -f next \
    && bspc desktop -f next.local && bspc monitor -f next

# focus the previous desktop in both monitors
ctrl + super + alt + Prior
    bspc desktop -f prev.local && bspc monitor -f next \
    && bspc desktop -f prev.local && bspc monitor -f next

# send to and focus the next/previous desktop
ctrl + alt + {Prior,Next}
    bspc node -d {prev,next}.local --follow

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'
super + {_,shift + }0
    bspc {desktop -f,node -d} 10

# send to the next monitor
super + less
    bspc node -f -m next --follow

#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# resize a window

super + alt + Left
    bspc node -z left -20 0 || bspc node -z right -20 0

super + alt + Down
    bspc node -z bottom 0 20 || bspc node -z top 0 20

super + alt + Up
    bspc node -z top 0 -20 || bspc node -z bottom 0 -20

super + alt + Right
    bspc node -z right 20 0 || bspc node -z left 20 0

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + alt + {a,s,w,d}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# tabbed
#

# add to tabbed container
ctrl + alt + {Left,Down,Up,Right}
    tabc add {west,south,north,east}

# remove from tabbed container
super + z
    tabc remove

#
# others
#

# Make split ratios equal
super + b
    bspc node @/ --equalize

# Make split ratios balanced
super + shift + b
	bspc node @/ --balance

# Flip layout vertically/horizontally
super + {_,shift + }y
    bspc node @/ --flip {vertical,horizontal}

# Rotate desktop
super + {_,shift + }r
    bspc node @/ --rotate {90,-90}
